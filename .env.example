# Supabase configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Server-side Supabase (for secure operations)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Supabase database direct access (if needed)
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Storage configuration
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=your-bucket-name

# Authentication settings
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# OAuth providers (if used)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Next.js environment mode
NODE_ENV=development

# Public variables (available in browser)
NEXT_PUBLIC_API_URL=https://api.example.com
NEXT_PUBLIC_SITE_URL=https://example.com
NEXT_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Server-only variables (not exposed to browser)
DATABASE_URL=postgresql://username:password@localhost:5432/database
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# API keys (keep server-side only)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# For image optimization
IMGIX_URL=https://your-project.imgix.net